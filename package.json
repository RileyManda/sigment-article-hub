{
  "name": "sigment-article",
  "version": "1.0.0",
  "description": "sigment app with article management",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "serve dist -s -l 4000",
    "serve": "set NODE_ENV=dev&& node app.js",
    "serve:prod": "set NODE_ENV=production&& node app.js",
    "serve:prod:unix": "NODE_ENV=production node app.js",
    "server": "node server/index.js",
    "server:dev": "NODE_ENV=development node server/index.js",
    "server:watch": "nodemon server/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "sigment": "^1.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "nodemon": "^3.0.1",
    "prisma": "^6.16.1",
    "serve": "^14.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
