{
  "name": "sigment-article",
  "version": "1.0.0",
  "description": "sigment app with article management",
  "main": "app.ts",
  "scripts": {
    "start": "tsx app.ts",
    "dev": "COREPACK_ENABLE_NETWORK=0 vite --host",
    "dev:force": "vite --force",
    "build": "vite build",
    "preview": "serve dist -s -l 4000",
    "serve": "NODE_ENV=dev tsx app.ts",
    "serve:prod": "NODE_ENV=production tsx app.ts",
    "serve:prod:unix": "NODE_ENV=production tsx app.ts",
    "server": "tsx app.ts",
    "server:dev": "NODE_ENV=development tsx app.ts",
    "server:watch": "tsx watch app.ts",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm run server:watch\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "type": "module",
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "sigment": "^1.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "jsdom": "^27.0.0",
    "nodemon": "^3.0.1",
    "prisma": "^6.16.1",
    "serve": "^14.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
